<h1>Listing cars</h1>

<table bgcolor="#EE33CC" border="4px">
  <tr>
    <th>Carmodel</th>
    <th>Price</th>
    <th>Year</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.carmodel %></td>
    <td><%= car.price %></td>
    <td><%= car.year %></td>
    <td><%= car.user_id %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

